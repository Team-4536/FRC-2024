{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deploy robot code",
            "type": "shell",
            "command": "py -m robotpy --main src/robot.py deploy",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Run robot sim",
            "type": "shell",
            "command": "py -m robotpy --main src/robot.py sim",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}