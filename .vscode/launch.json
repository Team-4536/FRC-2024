    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: RobotPy (Simulator)",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "robotpy",
            "args": [
                "--main",
                "src/robot.py",
                "sim"
